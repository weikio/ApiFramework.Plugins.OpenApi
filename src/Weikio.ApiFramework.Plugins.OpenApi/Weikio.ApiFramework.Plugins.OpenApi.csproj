    <PackageReference Include="Microsoft.Extensions.Options" Version="3.1.2" />
    <PackageReference Include="NSwag.CodeGeneration.CSharp" Version="13.8.2" />
    <PackageReference Include="Microsoft.CodeAnalysis.Common" Version="3.6.0" />
    <PackageReference Include="Weikio.ApiFramework.AspNetCore.NSwag" Version="1.0.0" />
    <PackageReference Include="Weikio.ApiFramework.SDK" Version="1.0.0" />
    <PackageReference Include="Weikio.TypeGenerator" Version="1.3.4" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../docs/logo_256.png" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

