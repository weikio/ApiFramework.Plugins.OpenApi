    <PackageId>Weikio.ApiFramework.Plugins.OpenApi</PackageId>
    <Product>Weikio.ApiFramework.Plugins.OpenApi</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/weikio/ApiFramework.Plugins.OpenApi</RepositoryUrl>
    <PackageTags>apiframework;plugin;openapi</PackageTags>
    <PackageIcon>logo_256.png</PackageIcon>
    <Title>OpenAPI plugin for Api Framework.</Title>
